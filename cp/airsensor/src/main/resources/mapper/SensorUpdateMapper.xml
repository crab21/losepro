<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dhlk.airsensor.biz.dao.UpdateSensorMapper">


    <!--sensorInfo-->
    <sql id="Base_column_list">
        sensor_addr,air_addr
    </sql>

    <insert id="initSensorInfo" parameterType="java.util.List">
        INSERT INTO sensorinfo (<include refid="Base_column_list"/>)
        VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.sensor_addr,jdbcType=VARCHAR}, #{item.air_addr,jdbcType=VARCHAR})
        </foreach>
    </insert>

    <update id="updateSensorInfo" parameterType="SensorInfo">
        UPDATE sensorinfo set air_addr=#{air_addr}
              WHERE sensor_addr=#{sensor_addr}
    </update>


    <!--senInfo-->
    <sql id="Sensor_list">
        sensor_addr,sensor_tem,air_tem,start_date,end_date
    </sql>

    <insert id="initSenInfo" parameterType="java.util.List">
        INSERT INTO seninfo (<include refid="Sensor_list"/>)
        VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.sensor_addr,jdbcType=VARCHAR}, #{item.sensor_tem,jdbcType=VARCHAR},
            #{item.air_tem,jdbcType=VARCHAR},
            #{item.start_date,jdbcType=VARCHAR},#{item.end_date,jdbcType=VARCHAR})
        </foreach>
    </insert>


    <insert id="updateSenorInfo">

    </insert>
</mapper>